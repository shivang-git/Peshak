<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- icon -->
    <link rel="shortcut icon" href="images/message.png" type="image/png" />

    <!-- css -->
    <link rel="stylesheet" href="/css/home.css">

    <title>Qunnect - A Messenger </title>
</head>

<body>

    <main class="content">
        <div class="container p-0">

            <h1 class="h3 mb-3">
                <a style="text-decoration: none;color: black;" href="/"> <i class="fa-regular fa-message"></i> Qunnect <i class="fa-regular fa-message"></i></a>
            </h1>

            <div class="card mb-3">
                <div class="row g-0">

                    <div class="col-12 col-lg-12 col-xl-12">
                        <div class="py-2 px-4 border-bottom d-lg-block bg-white ">
                            <div class="d-flex align-items-center py-1 gap-2  ">
                                <div class="position-relative ">
                                    <img src="/images/avatar1.png" class="rounded-circle mr-1" alt="userhead" width="40" height="40">
                                </div>
                                <div class="flex-grow-1 pl-4">
                                    <strong id="userhead" class="text-capitalize"></strong>
                                    <div class="text-muted small" id="typing"></div>
                                </div>
                            </div>
                        </div>

                        <div class="position-relative">
                            <div class="chat-messages p-4 pb-4">

                                <!-- <div class="chat-message-center pb-4">

                                    <div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-5" >
                                    </div>
                                </div>
                                <div class="chat-message-right pb-4">

                                    <div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3" >
                                    </div>
                                </div>

                                <div class="chat-message-left pb-4">

                                    <div class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3" >
                                    </div>
                                </div> -->


                            </div>
                        </div>

                        <div class="flex-grow-0 py-3 px-4 border-top">
                            <form id="chat-form">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="textarea" placeholder="Type your message">
                                    <button type="submit" class="btn btn-primary" id="msg-send">Send</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    </main>


    <footer>
        <p>Created By Shivang Srivastava. | Chat app on Socket.io. </p>
    </footer>

    <!-- moment library for time -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js"></script>

    <!-- socket io intialisation -->
    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="/js/socket-client.js"></script>



    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

